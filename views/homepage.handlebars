<ul class="post-list">
  {{#each posts as |post|}}
    <li class="list-item card">
      <h2 class="card-header">
        <a href="/post/{{post.id}}" class="post-link">{{title}}</a>
      </h2>
      <h4 class="card-body">
        Created by
        {{user.username}}
        on
        {{format_date created_at}}
      </h4>
      <br />
    </li>
  {{/each}}
</ul>