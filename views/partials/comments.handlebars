<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="card list-item">

        <div class="meta">
          <h3>
            Commented by
            {{user.username}}
            on
            {{format_date created_at}}
          </h3>
        </div>
        <div class="text">
          <p>
            {{comment_text}}
          </p>
        </div>
      </div>
    </section>

  {{/each}}
</div>