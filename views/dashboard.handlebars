
<h1 class="app-title"><a href="/dashboard">Your Dashboard</a></h1>
<section>
  <br>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label class="form-label" for="post-title">Title</label>
      <input class="form-input" type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label class="form-label" for="post-text">Text</label>
      <input class="form-input" id="post-text" name="post-text" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>

    {{> post-info post}}

      <h3>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </h3>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/new.js"></script>
